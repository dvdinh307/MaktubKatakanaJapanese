<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="katakana.maktub.maktubkatakanainputjapanaese.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Input only value Katakana character Japanese"
        android:textColor="@android:color/black" />

    <katakana.maktub.maktubkatakanainputjapanaese.MaktubEditTextKatakana
        android:id="@+id/edt_katakana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:hint="Input character katakana" />

    <Button
        android:id="@+id/btn_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_katakana"
        android:layout_centerHorizontal="true"
        android:text="GET VALUES" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_get"
        android:padding="10dp"
        android:text="Result"
        android:textColor="@android:color/black" />

</RelativeLayout>
